<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:background="#E6414141"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewVoltage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFEB3B"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/spinnerFlightMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_below="@+id/connectionTypeLabel"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/btnConnect"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewAltitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/speed"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewYaw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textviewSatellite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FF8282"
                        android:paddingTop="3dp"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerviewAlerting"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="0.35"
                    android:background="@drawable/recycler_background"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom4F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/left4F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnAuto"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.18"
                        android:text="일반\n모드" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.04"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnAutoBasic"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.14"
                        android:text="일반\n모드" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAutoPath"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.14"
                        android:text="경로\n비행" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAutoGap"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.14"
                        android:text="간격\n감시" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAutoArea"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.14"
                        android:text="면적\n감시" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right4F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnMapTypeSatellite"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="위성지도" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom3F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/left3F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnTakeOffAltitude"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.18"
                        android:text="이륙\n고도" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.04"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnTakeOffUp"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.14" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnTakeOffDown"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right3F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnMapMoveUnlock"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="맵 이동" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnMapTypeTerrain"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="지형도" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnCadastreOn"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="지적도 ON" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom2F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/left2F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnMission"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.18"
                        android:text="임무 전송" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right2F"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.45"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnMapMoveLock"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="맵 잠금" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnMapTypeBasic"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="일반지도" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnCadastreOff"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="지적도 OFF" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom1F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/left1F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnArm"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.18"
                        android:text="ARM" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right1F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="@string/clear" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnMapMove"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="맵 잠금" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnMapType"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="일반지도" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnCadastre"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.23"
                        android:text="Clear" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>